<UserControl x:Class="UMLDiagrams.View.TextComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UMLDiagrams.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/DesignerItem.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <ContentControl Selector.IsSelected="True" Style="{StaticResource DesignerItemStyle}">

        <ContentControl.RenderTransform>
            <RotateTransform Angle="{Binding Angle}" CenterX="5" CenterY="5"/>
        </ContentControl.RenderTransform>
        <TextBlock x:Name="TextBlock" VerticalAlignment="Center" HorizontalAlignment="Center" 
                   Text="{Binding Text}" IsHitTestVisible="False"/>
    </ContentControl>

</UserControl>
